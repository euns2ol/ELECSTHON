<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_marker"
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_station_state1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/station_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="충전소명"
        android:textSize="18dp"
        android:textColor="@color/colorTextDefault"
        app:layout_constraintBottom_toTopOf="@+id/station_dist_time"
        app:layout_constraintStart_toEndOf="@+id/list_marker"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/station_dist_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="거리(소요시간)"
        android:textColor="@color/colorTextDefault"
        android:textSize="15dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/station_name"
        app:layout_constraintTop_toBottomOf="@+id/station_name" />

    <TextView
        android:id="@+id/btn_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:elevation="0dp"
        android:text="경로안내"
        android:textColor="@color/colorAccent2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>